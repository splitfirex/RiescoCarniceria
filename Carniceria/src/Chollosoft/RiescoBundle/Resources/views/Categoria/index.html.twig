{% extends 'CarniceriaBundle::layout.html.twig' %} {% block body -%}
<section class="content gallery pad1">
	<div class="ic">More Website Templates @ TemplateMonster.com - July 30,
		2014!</div>
	<div class="container">
		<div class="row">
			{% for categoria in categorias %} {% if loop.index0 % 3 == 0 %}
			<div class="clear sep__1"></div>
			<div class="grid_4 ">
				{% else %}
				<div class="grid_4">
					{% endif %}
					<div class="gall_block">
						<div class="maxheight">
							<a
								href="{{ asset('uploads/') }}{{ categoria.filename }}"
								class="gall_item"><img
								src="{{ asset('uploads/') }}{{ categoria.filename }}"
								alt=""></a>
							<div class="gall_bot">
								<div class="text1">{{ categoria.nombre }} </div>
								{{ categoria.descripcion }} <br> <a href="{{ path('producto') }}" class="btn">Ver
									Productos</a>
							</div>
						</div>
					</div>
				</div>
				{% endfor %}

			</div>
		</div>

</section>

{% endblock %}
